        <td><%= demonstrativo.receitaestimada %></td>
        <td><%= demonstrativo.inadimplencia %></td>
        <td><%= demonstrativo.receitamenosinadimplencia %></td>
        <td><%= link_to 'Show', demonstrativo %></td>
        <td><%= link_to 'Edit', edit_demonstrativo_path(demonstrativo) %></td>
        <td><%= link_to 'Destroy', demonstrativo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

